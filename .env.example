# ============================================
# RMDB AI Chatbot - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# All variables are REQUIRED unless marked (Optional)

# --------------------------------------------
# SESSION CONFIGURATION
# --------------------------------------------
# Random string used to encrypt user sessions
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-random-session-secret-here

# --------------------------------------------
# OPENAI API CONFIGURATION
# --------------------------------------------
# Your OpenAI API key for AI query processing and analysis
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# (Optional) Backup OpenAI API key for failover
OPENAI_API_KEY_BACKUP=sk-your-backup-key-here

# --------------------------------------------
# PINECONE VECTOR DATABASE (for RAG)
# --------------------------------------------
# Pinecone API key for semantic search and context retrieval
# Get from: https://app.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key-here

# Pinecone environment/region (e.g., us-east-1, gcp-starter)
PINECONE_ENVIRONMENT=us-east-1

# --------------------------------------------
# MS SQL SERVER - APPLICATION DATABASE
# --------------------------------------------
# Stores: users, sessions, chats, messages, FAQ samples, error logs
# Format: mssql://username:password@host:port/database
APP_MSSQL_URL=mssql://admin:password@your-server.amazonaws.com:1433/rmchatbot_app

# --------------------------------------------
# MS SQL SERVER - CLIENT DATA DATABASE
# --------------------------------------------
# Stores: Project data (POR table) that users query via natural language
# This is the database your AI queries run against
CLIENT_MSSQL_URL=mssql://admin:password@your-server.amazonaws.com:1433/rmchatbot_client

# (Optional) Name of the table containing project data
# Defaults to "POR" if not specified
CLIENT_TABLE_NAME=POR

# --------------------------------------------
# NODE ENVIRONMENT
# --------------------------------------------
# Set to "production" for Render deployment
# Set to "development" for local development
NODE_ENV=production
